<div class="container" id="prijava">

    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <label for="username">{{ 'Корисничко име'|trans }}</label>
        <input type="text" id="username" name="_username" required="required" placeholder="username"/>
        <br>
        <label for="password">{{ 'Лозинка'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" placeholder="password" />
        <br>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'Запамти ме'|trans }}</label>
        <br>
        <input type="submit" id="_submit" class="btn btn-success" name="_submit" value="{{ 'Пријави се'|trans }}" />
    </form>
</div>
</div>
</div>
