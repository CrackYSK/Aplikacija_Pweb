{% extends "::base.html.twig" %}

{% block title %}AppBundle:Kategorija:index{% endblock %}

{% block body %}
    <h1>Welcome to the Dogadjaj:index page</h1>
    <table class="table table-bordered">
        <thead>
        <td>Naziv</td>
        <td>Datum</td>
        </thead>
        <tbody>
        {% for dogadjaj in dogadjaji %}
            <tr>
                <td>{{ dogadjaj.ime }}</td>
                <td>{{ dogadjaj.datum|date("m/d/Y")  }}</td>
                <td><a href="{{ path('dogadjaj_obrisi', {'id': dogadjaj.id}) }}">Obrisi</a>
                    <a href="{{ path('dogadjaj_dohvati', {'id': dogadjaj.id}) }}">Izmeni</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
