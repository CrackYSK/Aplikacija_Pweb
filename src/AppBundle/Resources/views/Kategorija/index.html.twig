{% extends 'AppBundle:Admin:admin_base.html.twig' %}

{% block title %}Преглед категорија{% endblock %}

{% block body %}
    <div class="container">
        <h1 style="text-align:center">Преглед категорија</h1>
        <table class="table table-bordered">
            <thead>
            <td>Назив</td>
            <td>Број тимова</td>
            <td>Број чланова</td>
            <td>Студентска</td>
            {% if admin %}
                <td>Акције</td>
            {% endif %}
            </thead>
            <tbody>
            {% for kategorija in kategorije %}

                <tr>
                    <td>{{ kategorija.naziv }}</td>
                    <td>{{ kategorija.brojTimova }}</td>
                    <td>{{ kategorija.brojClanovaTima }}</td>
                    <td>
                        {% if  kategorija.studentska %}


                            <span class="glyphicon glyphicon-ok"></span>

                        {% else %}
                            <span class="glyphicon glyphicon-remove"></span>
                        {% endif %}


                    </td>
                    {% if admin %}
                        <td>
                            <a class="btn btn-primary btn-xs" role="button"
                               href="{{ path('kategorija_edit', {'id': kategorija.id}) }}">
                                Измени</a>

                            <form style="display:inline-block; margin-top: 5px;"
                                  action='{{ path('kategorija_delete', {'id': kategorija.id}) }}' method="post">
                                <input type="submit" class="btn btn-danger btn-xs" value="Обриши">
                            </form>


                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if admin %}
        <a class="btn btn-success" role="button" href="{{ path('kategorija_nova') }}">
            Додај нову категорију</a>
        {% endif %}

    </div>
{% endblock %}
